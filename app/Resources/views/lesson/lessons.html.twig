{% extends 'base.html.twig' %}
{% block body %}
    <section>
        {% for lesson in lessons %}
            <article>
                <h1><a href="./lesson/{{ lesson.id }}/edit">{{ lesson.title }}</a></h1>
                <p>{{ lesson.summary }}</p>
                <p>{{ lesson.content }}</p>
                <p>{{ lesson.writer.username }}</p>
            </article>
            <hr>
        {% endfor %}
    </section>
{% endblock %}